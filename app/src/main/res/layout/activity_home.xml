<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/backpaper"
    android:orientation="vertical"
    tools:context="com.example.admin.stobular.home">


    <ImageView
        android:id="@+id/homelogo"
        android:layout_width="420dp"
        android:layout_height="270dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginTop="57dp"
        android:background="?android:attr/panelBackground"
        android:contentDescription="@string/app_name"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/play"
        android:layout_width="175dp"
        android:layout_height="100dp"
        android:layout_below="@+id/homelogo"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:background="@android:drawable/alert_light_frame"
        android:fontFamily="@font/chelsea_market"
        android:freezesText="false"
        android:shadowColor="#2d2d2d"
        android:soundEffectsEnabled="false"
        android:text="@string/play"
        android:textColor="#409dbc"
        android:textSize="30sp"
        android:textStyle="bold" />



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="402dp"
        android:layout_height="173dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/vocab"
        app:srcCompat="@drawable/pennn" />

    <Button
        android:id="@+id/info"
        android:layout_width="175dp"
        android:layout_height="80dp"
        android:layout_below="@+id/play"
        android:layout_centerHorizontal="true"
        android:background="@android:drawable/alert_light_frame"
        android:fontFamily="@font/chelsea_market"
        android:freezesText="false"
        android:onClick="howto"
        android:shadowColor="#2d2d2d"
        android:soundEffectsEnabled="false"
        android:text="@string/infooo"
        android:textColor="#409dbc"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="How to Play" />

</RelativeLayout>
